<%= provide :title, t(".log_in") %>
<div class="container" id="login-screen">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3><%= t ".log_in" %></h3>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.email_field :email, class: "form-control",
              placeholder: t(".username"), required: "required", autofocus: "autofocus" %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
              <%= f.password_field :password, class: "form-control",
                placeholder: t(".password"), required: "required", pattern: Settings.sessions.pattern, title: t(".title_error_pass") %>
          </div>
          <div class="form-group">
            <%= f.button t(".log_in"), {class: "btn float-right btn-warning my-hover", id: "btn-login"} do %>
              <i class="fas fa-sign-in-alt"></i>
              <%= t ".log_in" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
