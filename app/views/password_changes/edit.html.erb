<% provide :title, t(".change_pw_title") %>
<div class="container" id="change-password-screen">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3><%= t ".change_password" %></h3>
      </div>
      <div class="card-body">
        <%= form_with model: @user,local: true, role: "form", url: password_change_path do |f| %>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password_old, class: "form-control",
              placeholder: t(".change_password")%>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password, class: "form-control",
              placeholder: t(".password_new") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control",
              placeholder: t(".confirmation") %>
          </div>
          <div class="form-group">
            <%= f.submit t(".change_password"), class: "btn float-right my-login-btn" %>
          </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
