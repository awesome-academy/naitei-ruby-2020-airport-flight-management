<% provide :title, @user.name %>
<div id="main-container-profile">
  <div class="container main-secction" id="view-profile-screen">
    <div class="view-profile-title">
      <h1><%= t ".title" %></h1>
    </div>
    <div class="row">
      <div class="row user-left-part">
        <div class="col-md-3 col-sm-3 col-xs-12 user-profil-part pull-left">
          <div class="row ">
            <div class="col-md-12 col-md-12-sm-12 col-xs-12 user-image text-center">
              <%= image_tag Settings.link.layouts.sidebar.avatar, class: "rounded-circle", alt: Settings.link.layouts.sidebar.alt_avatar %>
            </div>
          </div>
        </div>
        <div class="col-md-9 col-sm-9 col-xs-12 pull-right profile-right-section">
          <div class="row profile-right-section-row">
            <div class="col-md-12 profile-header">
              <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-6 profile-header-section1 pull-left">
                  <h1><%= current_user.name %></h1>
                  <h5><%= t ".unit" %></h5>
                </div>
                  <div class="col-md-4 col-sm-6 col-xs-6 profile-header-section1 text-right pull-rigth">
                    <%= link_to logout_path(locale), {class: "btn btn-danger btn-block my-hover", data: { method: "delete" }} do %>
                      <i class="fa fa-power-off"></i>
                      <%= t ".logout" %>
                    <% end %>
                  </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-12">
                  <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                      <%= link_to user_path(locale, current_user), {class: "nav-link active"} do %>
                        <i class="fa fa-user"></i>
                        <%= t ".information" %>
                      <% end %>
                    </li>
                  </ul>
                  <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade show active" id="profile">
                      <div class="row">
                        <div class="col-md-4">
                          <label>
                            <%= t ".email" %>
                          </label>
                        </div>
                        <div class="col-md-8">
                          <p>
                            <%= current_user.email %>
                          </p>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <label>
                            <%= t ".unit" %>
                          </label>
                        </div>
                        <div class="col-md-8">
                          <p>
                            <%= current_user.unit %>
                          </p>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <label>
                            <%= t ".staff_code" %>
                          </label>
                        </div>
                        <div class="col-md-8">
                          <p>
                            <%= current_user.staff_code %>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
