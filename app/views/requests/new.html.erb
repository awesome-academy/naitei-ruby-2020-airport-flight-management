<div class="container" id="create-screen">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h5><%= t ".create_request" %></h5>
      </div>
      <div class="card-body">
        <%= form_with model: @schedule_request, local: true, role: "form", url: requests_path do |f| %>
          <div class="input-group form-group">
            <div class="form-group col-md-6">
              <%= f.label :schedule_id, t(".schedule_name") %>
              <%= f.collection_select :schedule_id, current_user.schedules, :id, :title %>
            </div>
            <div class="form-group col-md-6">
            </div>
            <div class="form-group col-md-4">
              <span class="field-required"><%= t ".plane_name" %></span>
              <p class="content" id="plane_name"><%= @schedule.plane_name %></p>
            </div>
            <div class="form-group col-md-4">
              <span class="field-required"><%= t ".pilot_name" %></span>
              <p class="content" id="pilot_name"><%= @schedule.user_name %></p>
            </div>
            <div class="form-group col-md-4">
              <span class="field-required"><%= t ".runway" %></span>
              <p class="content" id="runway_name"><%= @schedule.runway_name %></p>
            </div>
            <div class="form-group col-md-6">
              <span class="field-required"><%= t ".from"%></span>
              <p class="content" id="from"><%= @schedule.from %></p>
            </div>
            <div class="form-group col-md-6">
              <span class="field-required"><%= t ".to" %></span>
              <p class="content" id="to"><%= @schedule.to %></p>
            </div>
            <div class="form-group col-md-6">
              <div>
                <span class="field-required"><%= t ".title" %></span>
              </div>
              <%= f.select :title_request, Request.title_requests_i18n %>
            </div>
            <div class="form-group col-md-12">
              <span class="field-required"><%= f.label :reason, t(".reason") %></span>
              <%= f.text_area :content, rows: Settings.requests.text_row, class: "col-md-12" %>
            <div id="btn-request">
              <%= f.button t(".log_in"), {class: "btn float-left btn-primary my-hover", id: "btn-create-request"} do %>
                <%= t ".submit" %>
              <% end %>
            </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag "requests/requests" %>
